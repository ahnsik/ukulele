<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:background="@drawable/bg_selector"
    android:scaleWidth="100%"
    android:scaleType="centerCrop"
    tools:context=".FileSelectorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80453d3c"
            android:fontFamily="@font/katuri"
            android:textSize="22sp"
            android:textColor="#f4d62f"
            android:text="@string/txtSelectFile"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/jeonnamfont"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:id="@+id/fileList" />

    </LinearLayout>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/jeonnamfont"
        android:textSize="24sp"
        android:text="@string/btntxt_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>