<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_paper"
    tools:context=".FileSelectorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:background="#80453d3c"
            android:textColor="#f4d62f"
            android:text="우쿨렐레를 튜닝 하세요"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTuneMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="28sp"
                android:text="Standard Tuning" />

            <ImageView
                android:id="@+id/imgTune"
                android:layout_width="800dp"
                android:layout_height="293dp"
                android:layout_gravity="right"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/tuner_none" />

            <TextView
                android:id="@+id/txtTunedNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="16dp"
                android:background="#999"
                android:textSize="96sp"
                android:text="C#4" />

            <TextView
                android:id="@+id/txtTunedFreq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="180dp"
                android:layout_marginBottom="16dp"
                android:background="#999"
                android:gravity="center"
                android:textSize="28sp"
                android:text="Tune DOWN" />

            <TextView
                android:id="@+id/txtTunedFreq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="210dp"
                android:layout_marginBottom="16dp"
                android:background="#999"
                android:gravity="center"
                android:textSize="28sp"
                android:text="442.5 Hz" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="돌아가기"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <Button
            android:id="@+id/btnImportFromFTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnReturn"
            android:text="FTP에서가져오기"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/btnExportToFTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnReturn"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:text="FTP에 내보내기"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


</RelativeLayout>