<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_paper"
    android:screenOrientation="landscape"
    tools:context=".FileSelectorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80453d3c"
            android:fontFamily="sans-serif"
            android:text="우쿨렐레를 튜닝 하세요"
            android:textColor="#f4d62f"
            android:textSize="22sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTuneMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtWhatToDo"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif"
                android:text="기본(High-G) 튜닝"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="620dp"
                android:layout_height="fill_parent"
                android:layout_below="@+id/txtTuneMode"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgTune"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_ukulele_tune_none" />

                <com.example.ahnsik.ukuleletutor.TuneIndicatorView
                    android:id="@+id/imgTunedNote"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="34dp"
                    android:background="#ddd"
                    app:srcCompat="@drawable/ic_ukulele_tune_none" />

                <TextView
                    android:id="@+id/txtTunedFreq"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="442.5 Hz"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtWhatToDo"
                    android:layout_width="fill_parent"
                    android:layout_height="26dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Adjust NOB"
                    android:textSize="24sp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_shape"
        android:fontFamily="sans-serif"
        android:text="@string/btntxt_back"
        android:textColor="#333"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>
</merge>