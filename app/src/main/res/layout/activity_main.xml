<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg_title"
    tools:context="com.example.ahnsik.mytuner.MainActivity">

    <Button
        android:id="@+id/btnTuning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_shape"
        android:textColor="#333"
        android:text="우쿨렐레 튜닝"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/btnTraining"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_shape"
        android:textColor="#333"
        android:text="혼자 연습하기"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPlaying"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnPlaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_shape"
        android:textColor="#333"
        android:text="연주하며 연습하기"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="우쿨렐레를 배우자"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
