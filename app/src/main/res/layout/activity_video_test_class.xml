<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#0099cc"
    tools:context=".PlayingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<com.ahnsik.ukuleletutorsik.com.ahnsik.ukuleletutor.PlayView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->


        <VideoView
            android:id="@+id/fullscreen_video"
            android:layout_width="960px"
            android:layout_height="540px"
            android:gravity="center"
            android:keepScreenOn="true"
            android:text="@string/dummy_content"
            android:textColor="#33b5e5"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtOverlayText"
            android:text="이것은 비디오에 오버레이 될 문자열 입니다."
            android:textSize="64sp"
            android:textColor="#F53"
            android:gravity="center"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnJustBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/button_shape"
            android:text="Just Button"
            android:textColor="#FFF" />

    </RelativeLayout>

</FrameLayout>