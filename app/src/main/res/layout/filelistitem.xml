<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#c0dcb47d"
    android:id="@+id/filelistItem">

    <ImageView
        android:id="@+id/fileImageView"
        android:layout_width="96dp"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:background="#449922"
        app:srcCompat="@drawable/ukulele_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/filenameText"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="no filename"
                    android:fontFamily="sans-serif"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bpsText"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="bps: unknown"
                    android:fontFamily="sans-serif"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/songTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="A long long length of string title"
                android:fontFamily="sans-serif"
                android:textSize="32sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="A long long length of description strings here. something like, who made this file, mood of songs, difficulty levels, training levels, or ranking, etc.. "
            android:fontFamily="sans-serif"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
