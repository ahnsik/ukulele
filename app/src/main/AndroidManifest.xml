<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ahnsik.ukuleletutor">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/FullscreenTheme"
        android:screenOrientation="landscape"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".AboutUkuleleActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".StrumTrainingActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".TerminalActivity"
            android:screenOrientation="landscape"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".ChildChord_Activity"
            android:screenOrientation="landscape" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FileSelectorActivity"
            android:screenOrientation="landscape"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_file_selector" />
        <activity
            android:name=".TrainingActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_training" />
        <activity
            android:name=".TuningActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_Tuning" />
        <activity
            android:name=".PlayingActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_playing" />
    </application>

</manifest>